<h1>Edit Post</h1>
<%= form_for @creature do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field(:name, {:class => "form-control"}) %>
  </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_area(:description, {:class => "form-control"})  %>
  </p>

  <p>
    <%= f.submit ({:class => "btn btn-primary"})%>
  </p>
<% end %>
